general {
        
        output_format = "i3bar"
        separator = "  "
        colors = true
        markup = pango
        interval = 5
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "tztime local"
order += "load"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "disk /"
#order += "disk /home"
#order += "ethernet enp1s0"
#order += "wireless wlp2s0"
#order += "volume master"
#order += "battery 0"

tztime local {
        align = "center"
		format = "%time"
		format_time = "ï€—%a %-d %b %H:%M"
		separator_block_width = 300
}

load {
        format = " ïƒ¤  %5min Load "
}

cpu_temperature 0 {
        format = " î¦ˆ %degrees Â°C "
        path = "/sys/class/thermal/thermal_zone0/temp"
}
cpu_usage {
	format = "ï‹›  %usage "
}

disk "/" {
        format = " ï€• %used / %free  "
}

